{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Test chart",
  "width": 800,
  "height": 500,
  "padding": 5,

  "title": {
    "text": "Test chart",
    "anchor": "middle",
    "fontSize": 16,
    "frame": "group",
    "offset": 4
  },

  "signals": [
    {
      "name": "palette", "value": "Turbo",
      "bind": {
        "input": "select",
        "options": [
          "Turbo",
          "Viridis",
          "Magma",
          "Inferno",
          "Plasma",
          "Cividis",
          "DarkBlue",
          "DarkGold",
          "DarkGreen",
          "DarkMulti",
          "DarkRed",
          "LightGreyRed",
          "LightGreyTeal",
          "LightMulti",
          "LightOrange",
          "LightTealBlue",
          "Blues",
          "Browns",
          "Greens",
          "Greys",
          "Oranges",
          "Purples",
          "Reds",
          "TealBlues",
          "Teals",
          "WarmGreys",
          "BlueOrange",
          "BrownBlueGreen",
          "PurpleGreen",
          "PinkYellowGreen",
          "PurpleOrange",
          "RedBlue",
          "RedGrey",
          "RedYellowBlue",
          "RedYellowGreen",
          "BlueGreen",
          "BluePurple",
          "GoldGreen",
          "GoldOrange",
          "GoldRed",
          "GreenBlue",
          "OrangeRed",
          "PurpleBlueGreen",
          "PurpleBlue",
          "PurpleRed",
          "RedPurple",
          "YellowGreenBlue",
          "YellowGreen",
          "YellowOrangeBrown",
          "YellowOrangeRed"
        ]
      }
    },
    {
      "name": "reverse", "value": false, "bind": {"input": "checkbox"}
    }
  ],

  "data": [
    {
      "name": "latencies",
      "url": "data/latencies2.csv",
      "format": {"type": "csv", "parse": {
        "date": "date", "latencycount": "number", "latency": "number"
        }}
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "latencies", "field": "date"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "band",
      "domain": {"data": "latencies", "field": "latency"},
      "range": "height",
      "reverse": true
    },
    {
      "name": "color",
      "type": "linear",
      "range": {"scheme": {"signal": "palette"}},
      "domain": {"data": "latencies", "field": "latencycount"},
      "reverse": {"signal": "reverse"},
      "zero": false, "nice": true
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "domain": false, "title": "Time"},
    {
      "orient": "left", "scale": "y", "domain": false, "title": "Latency"
    }
  ],

  "legends": [
    {
      "fill": "color",
      "type": "gradient",
      "title": "Count of requests",
      "titleFontSize": 12,
      "titlePadding": 4,
      "gradientLength": {"signal": "height - 16"}
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "latencies"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "date", "type": "temporal"},
          "y": {"scale": "y", "field": "latency"},
          "width": {"value": 5},
          "height": {"scale": "y", "band": 1},
          "tooltip": {"signal": "timeFormat(datum.date, '%Y-%m-%dT%H:%M:%S%z') + ': ' + datum.latency + 'ms: ' + datum.latencycount + ' requests'"}
        },
        "update": {
          "fill": {"scale": "color", "field": "latencycount"}
        }
      }
    }
  ]
}
